<ul id="lists">
	<% sort_lists(@lists).each do |list|%>
		<li class="<%=list_class(list[:todos])%>">
			<a href=<%="/lists/#{list[:id]}"%>>
				<h2><%= list[:name] %></h2>
				<p>
					<%= count_remaining_todos(list[:todos]) %> /
					<%= list[:todos].size %>		
				</p>
			</a>
		</li>
	<%end%>
</ul>

<% content_for :header_links do %>
	<a class="add" href="/lists/new">New List</a>
<% end %>
