<section id="todos">
	<header>
		<h2>Editing "<%= @list[:name] %>"</h2>
		<ul>
			<li>
				<form class="delete" action=<%="/lists/#{@list[:id]}/delete"%> method="post">
					<button type="submit" class="delete">
						Delete List
					</button>
				</form>
			</li>
		</ul>
	</header>
</section>

<form action=<%="/lists/#{@list[:id]}"%> method="post">
	<dl>
		<dt>
			<label for="list_name">Update the name for your list:</label>
		</dt>
		<dd>
			<input type="text" name="list_name" placeholder="List Name" value="<%= params[:list_name] || @list[:name] %>">
		</dd>
	</dl>
	<fieldset class="actions">
		<input type="submit" value="Save">
		<a href=<%="/lists/#{@list[:id]}"%> >Cancel</a>
	</fieldset>
</form>